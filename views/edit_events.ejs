
<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h5 class="text-light">Edit Event(<%= user.name %></h5>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= user._id%>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="sig">SIG</label>
                            <input type="text" name="sig" class="form-control form-control-lg" placeholder="Enter SIG"  value="<%= user.sig %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="type">Type of Event</label>
                            <input type="text" name="type" class="form-control form-control-lg" placeholder="Enter type of Event" value="<%= user.Type %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name of Event" value="<%= user.Name %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="date">Date</label>
                            <input type="tel" name="date" class="form-control form-control-lg" placeholder="Enter Date of Event (YYYY-MM-DD)" value="<%= user.date %>" required/>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Update Event" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
